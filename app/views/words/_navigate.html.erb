<div class="notice">
  <%= notice %>
</div>
<div class="search">
  <%= form_tag @word, method: 'get' do %>
    <%= text_field_tag :search, params[:search], class: "wordinput", 
      placeholder: "search/add a word" %>
  <% end %>
</div>
<div class="word-list">
  <ul>
<% unless @words.empty? %>
  <% @words.each { |word| %>
    <li class="item">
      <%= link_to "\u{2717}", word, class: "delsym", method: :delete, 
      title: "delete" %> 
      <%= content_tag "span", word.word, id: word.id, class: "word" %>
    </li>
  <% } %>
<% end %>
<% if !@matched && params[:search] %>
  <%= render 'form' %>
<% end %>
  </ul>
</div>
<div class="word-navi">
</div>
